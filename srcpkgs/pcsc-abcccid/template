# Template file for 'pcsc-abcccid'
pkgname=pcsc-abcccid
version=2.1.4
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config perl unzip"
makedepends="pcsclite-devel libusb-devel"
depends="pcsclite"
