post_extract() {
	bsdtar --strip-components=1 -xzf abcccid-${version}.tar.bz2
}

post_install() {
	vinstall src/92_pcscd_abcccid.rules 644 usr/lib/udev/rules.d/
	vdoc readers/supported_readers.txt
	vdoc README.md
}
